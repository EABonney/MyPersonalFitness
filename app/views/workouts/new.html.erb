<div id="workoutform">
<% form_for @swim, :url => swim_workouts_path do |f| %>
  <%= f.error_messages %>
  <fieldset>
    <legend>Enter a new swim workout</legend>
    <%= render :partial => "shared/form", :object => f %>
  </fieldset>
  <%= f.submit "Save" %>
<% end %>

<% form_for @bike, :url => bike_workouts_path do |f| %>
  <%= f.error_messages %>
  <fieldset>
    <legend>Enter a new bike workout</legend>
    <%= render :partial => "shared/form", :object => f %>
    <%= f.label :avg_rpms %>
    <%= f.text_field :avg_rpms %>
  </fieldset>
  <%= f.submit "Save" %>
<% end %>

<% form_for @run, :url => run_workouts_path do |f| %>
  <%= f.error_messages %>
  <fieldset>
    <legend>Enter a new run workout</legend>
    <%= render :partial => "shared/form", :object => f %>
  </fieldset>
  <%= f.submit "Save" %>
<% end %>
</div>